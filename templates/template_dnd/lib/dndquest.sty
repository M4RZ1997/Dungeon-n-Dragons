    borderline~north = {3pt} {0pt}   {MarzPurple},
    borderline~north = {2pt} {0.5pt} {MarzGold},
    borderline~south = {3pt} {0pt}   {MarzPurple},
    borderline~south = {2pt} {0.5pt} {MarzGold},
    colback          = DmgLavender,
    colbacktitle     = DmgLavender,
    colframe         = titlered,

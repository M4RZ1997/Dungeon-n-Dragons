% ################################################################################################# %
% -------------------------------- Quest Hooks Background Handling -------------------------------- %
\bool_if:NTF \l__dnd_show_background_bool
  {
    \let\DndQuestHook\DndQuestBg
    \let\endDndQuestHook\endDndQuestBg
  }{
    \let\DndQuestHook\DndQuestNoBg
    \let\endDndQuestHook\endDndQuestNoBg
  }

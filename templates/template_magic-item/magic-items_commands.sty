% ---------------------------------- Item Description  and Image ---------------------------------- %
\newcommand{\itemDescriptionAndImage}[3]{%
	\begin{tikzpicture}[remember picture, overlay]%
		\node[yshift=0.8cm, anchor=west] {\textit{#1}};%
		\ifthenelse{\equal{#2}{example}}{%
			\node[xshift=-2.25cm, yshift=0.5cm, anchor=north west] {\includegraphics[width=1.3\columnwidth]{%
				example-image-b%
			}};%
		}{%
			\node[xshift=-2.25cm, yshift=0.5cm, anchor=north west] {\includegraphics[width=1.3\columnwidth]{%
				\PATH magic_items/\ItemCategoryValue\ItemSubCategoryValue/\ItemFolderValue/images/#2%
			}};%
		}%
	\end{tikzpicture}%
	\vspace*{#3}%
}%
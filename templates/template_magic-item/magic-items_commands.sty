\newcommand{\ItemCategoryValue}{}
\newcommand{\ItemSubCategoryValue}{}
\newcommand{\ItemFolderValue}{}

\newcommand{\ItemCategory}[1]{\renewcommand{\ItemCategoryValue}{#1}}
\newcommand{\ItemSubCategory}[1]{\renewcommand{\ItemSubCategoryValue}{/#1}}
\newcommand{\ItemFolder}[1]{\renewcommand{\ItemFolderValue}{#1}}

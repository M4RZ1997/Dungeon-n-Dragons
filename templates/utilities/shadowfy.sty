% Define the custom macro that takes a word as a parameter
\newcommand{\formatShadowfySC}[1]{%
	\isNumber{#1}\ifnum\numbool=0 %
		\isUpperCase{#1}\ifnum\bool=1 \xdef\ucletter{#1}\else\toUpperCaseLetter{#1}\fi%
    		\titlefont{\fontsize{\ifnum\bool=1 \uppercasefontsize\else\lowercasefontsize\fi}{1.2\uppercasefontsize}\selectfont\shadowfy{\ucletter}}%
    \else%
    	\titlefont{\fontsize{\uppercasefontsize}{1.2\uppercasefontsize}\selectfont\shadowfy{#1}}%
    \fi%
}%
\newcommand{\shadowfiedSCTitle}[1]{%
    \StrLen{#1}[\wordlen]%
    \foreach \i in {1,...,\wordlen}{%
        \StrChar{#1}{\i}[\currentletter]%
        \formatShadowfySC{\currentletter}%
    }%
}%
\newcommand{\streamLetterShadowfier}[1]{%
	\def\currentWord{}%
	\StrBefore{#1}{ }[\currentWord]%
	\ifx\currentWord\empty%
	% Reached the last word (no more spaces)
		\shadowfiedSCTitle{#1}%
	\else%
    	% Process the current word (replace this with your desired action)
		\shadowfiedSCTitle{\currentWord}%
	% Remove the processed word from the string
		\StrBehind{#1}{\currentWord}[\remainingString]%
	% Call the command recursively to process the next word
		\streamLetterShadowfier{\remainingString}%
	\fi%
}%
